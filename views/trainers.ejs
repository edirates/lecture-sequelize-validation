<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" href="/style.css" rel="stylesheet">
    <title>Trainers</title>
</head>
<body>
    <h1>List Trainers</h1>
    <p>
        <a href="/">Home</a> || 
        <a href="/trainers/add">Add Trainer</a>
    </p>
    <% if (Array.isArray(error)) { %>
        <h4>
            <% for(let i = 0; i < error.length; i++) { %>
                <%= error[i] %><br/>
            <% } %>
        </h4>
    <% } else { %>
        <h4><%= error %></h4>
    <% } %>
    <% if (message) { %>
        <h3><%= message %></h3>
    <% } %>
    <table border>
        <thead>
            <th>No.</th>
            <th>Full Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth Date</th>
            <th>Age</th>
            <th>Points</th>
            <th>Gym Name</th>
            <th>List of Pokemons</th>
        </thead>
        <tbody>
            <% for (let i = 0; i < trainers.length; i++) { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><%= trainers[i].dataValues.full_name %></td>
                    <td><%= trainers[i].first_name %></td>
                    <td><%= trainers[i].last_name %></td>
                    <td><%= trainers[i].birth_date.toDateString() %></td>
                    <td><%= trainers[i].age %></td>
                    <td><%= trainers[i].points %></td>
                    <td><%= trainers[i].Gym.name %></td>
                    <% 
                        let pokemons = trainers[i].Pokemons.map((pokemon) => {
                            return pokemon.name;
                        });
                    %>
                    <td><%= (pokemons.length > 0) ? pokemons.join(", ") : "-" %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>