<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" href="/style.css" rel="stylesheet">
    <title>Add Gym</title>
</head>
<body>
    <h1>Add New Gym</h1>
    <p>
        <a href="/gyms">List Gyms</a>
    </p>
    <% if (Array.isArray(error)) { %>
        <h4>
            <% for(let i = 0; i < error.length; i++) { %>
                <%= error[i] %><br/>
            <% } %>
        </h4>
    <% } else { %>
        <h4><%= error %></h4>
    <% } %>
    <form action="/gyms/add" method="POST">
        <label for="name">Name : </label>
        <input type="text" name="name" id="name" placeholder="Gym name"> <br/>
        <input type="submit" value="Add Gym">
    </form>
</body>
</html>