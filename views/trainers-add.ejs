<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" href="/style.css" rel="stylesheet">
    <title>Add Trainer</title>
</head>
<body>
    <h1>Add New Trainer</h1>
    <p>
        <a href="/trainers">List Trainers</a>
    </p>
    <% if (Array.isArray(error)) { %>
        <h4>
            <% for(let i = 0; i < error.length; i++) { %>
                <%= error[i] %><br/>
            <% } %>
        </h4>
    <% } else { %>
        <h4><%= error %></h4>
    <% } %>
    <form action="/trainers/add" method="POST">
        <label for="first_name">First Name : </label>
        <input type="text" name="first_name" id="first_name" placeholder="Trainer first name"> <br/>
        <label for="last_name">Last Name : </label>
        <input type="text" name="last_name" id="last_name" placeholder="Trainer last name"> <br/>
        <label for="birth_date">Birth date : </label>
        <input type="date" name="birth_date" id="birth_date"> <br/>
        <!-- <label for="age">Age : </label>
        <input type="number" name="age" id="age" placeholder="Trainer age"> <br/> -->
        <label for="points">Points : </label>
        <input type="number" name="points" id="points" placeholder="Trainer points"> <br/>
        <label for="GymId">Gym : </label>
        <select name="GymId" id="GymId"> 
            <option value="">-- Choose Gym --</option>
            <% for (let i = 0; i < gyms.length; i++) { %>
                <option value="<%= gyms[i].id %>"><%= gyms[i].name %></option>
            <% } %>
        </select><br/>
        <input type="submit" value="Add Trainer">
    </form>
</body>
</html>