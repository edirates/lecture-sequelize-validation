<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" href="/style.css" rel="stylesheet">
    <title>Pokemons</title>
</head>
<body>
    <h1>List Pokemons</h1>
    <p>
        <a href="/">Home</a> || 
        <a href="/pokemons/add">Add Pokemon</a>
    </p>
    <% if (Array.isArray(error)) { %>
        <h4>
            <% for(let i = 0; i < error.length; i++) { %>
                <%= error[i] %><br/>
            <% } %>
        </h4>
    <% } else { %>
        <h4><%= error %></h4>
    <% } %>
    <% if (message) { %>
        <h3><%= message %></h3>
    <% } %>
    <table border>
        <thead>
            <th>No.</th>
            <th>Pokemon Name</th>
            <th>Type</th>
            <th>Level</th>
            <th>Status</th>
            <th>List of Trainers</th>
        </thead>
        <tbody>
            <% for (let i = 0; i < pokemons.length; i++) { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><%= pokemons[i].name %></td>
                    <td><%= pokemons[i].type %></td>
                    <td><%= pokemons[i].level %></td>
                    <td><%= pokemons[i].status %></td>
                    <% 
                        let trainers = pokemons[i].Trainers.map((trainer) => {
                            return trainer.getFullName();
                        });
                    %>
                    <td><%= (trainers.length > 0) ? trainers.join(", ") : "-" %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>