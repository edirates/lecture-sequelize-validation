<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" href="/style.css" rel="stylesheet">
    <title>Managers</title>
</head>
<body>
    <h1>List Managers</h1>
    <p>
        <a href="/">Home</a> || 
        <a href="/managers/add">Add Manager</a>
    </p>
    <% if (Array.isArray(error)) { %>
        <h4>
            <% for(let i = 0; i < error.length; i++) { %>
                <%= error[i] %><br/>
            <% } %>
        </h4>
    <% } else { %>
        <h4><%= error %></h4>
    <% } %>
    <% if (message) { %>
        <h3><%= message %></h3>
    <% } %>
    <table border>
        <thead>
            <th>No.</th>
            <th>Manager Name</th>
            <th>Gym Name</th>
        </thead>
        <tbody>
            <% for (let i = 0; i < managers.length; i++) { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><%= managers[i].name %></td>
                    <td><%= (managers[i].Gym) ? managers[i].Gym.name : "-" %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>